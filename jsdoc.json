{
  "source": {
    "include": ["."],
    "exclude": ["node_modules", "docs", "coverage"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "node_modules/docdash",
    "readme": "README.md"
  },
  "docdash": {
    "sort": true,
    "search": true,
    "collapse": true,
    "meta": {
      "title": "MultiBrowseAutomation Docs",
      "description": "Documentation for the Multi-Browser Automation Framework"
    },
    "menu": {
      "GitHub Repo": {
        "href": "https://github.com/your-repo-here",
        "target": "_blank"
      }
    }
  }
}
